<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.MainActivity">

    <TextView
        android:id="@+id/txtview_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTROL FINANCIERO"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_login_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtview_Titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


    <EditText
        android:id="@+id/edit_pin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="Ingresa tu PIN"
        android:gravity="center"
        android:inputType="numberPassword"
        android:textSize="16sp"
        android:background="@android:drawable/edit_text"
        app:layout_constraintTop_toBottomOf="@+id/edt_login_username"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/gridTeclas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_pin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <Button android:id="@+id/boton1" android:text="1" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton2" android:text="2" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton3" android:text="3" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton4" android:text="4" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton5" android:text="5" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton6" android:text="6" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton7" android:text="7" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton8" android:text="8" style="@style/EstiloBotonTeclado"/>
        <Button android:id="@+id/boton9" android:text="9" style="@style/EstiloBotonTeclado"/>

        <View
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <Button android:id="@+id/boton0" android:text="0" style="@style/EstiloBotonTeclado"/>
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </GridLayout>

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="INGRESAR"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/gridTeclas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/registrarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿No tienes cuenta? Regístrate"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/usarHuella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Usar huella digital?"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/registrarUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>